---
import { storyblokEditable } from "@storyblok/astro";
import { Image } from "astro:assets";

const { blok } = Astro.props;

import NakecodeLogo from "../assets/nakecode-logo-black.svg";
---

<style>
    .footer {
        padding: 0 1rem;
        border-top: 1px solid #dddddd;
    }
    nav {
        display: flex;
        gap: 0.8rem;
        padding: 1.6rem 0rem;

        align-items: center;
    }

    nav p {
        font-size: 2rem;
        color: #111111;
        line-height: 100%;
        letter-spacing: -1px;
    }

    @media only screen and (min-width: 744px) {
        .footer {
            padding: 0 2rem;
        }
    }

    @media only screen and (min-width: 1024px) {
        .footer {
            padding: 0 4rem;
        }
    }
    @media only screen and (min-width: 1440px) {
        .footer {
            padding: 0 8rem;
        }
    }
</style>

<div class="footer" {...storyblokEditable(blok)}>
    <nav>
        <Image class="right-arrow" src={NakecodeLogo} alt="right arrow" />
        <p>Nakecode</p>
    </nav>
</div>
